{
  "functions": [
    {
      "source": "functions",
      "ignore": [
        "venv",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "runtime": "python310",
      "predeploy": [],
      "codebase": "default"
    }
  ],
  "hosting": {
    "site": "cashflowmanager",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "rules/storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    }
  },
  "firestore": {
    "database": "(default)",
    "rules": "rules/firestore.rules",
    "indexes": "config/firestore.indexes.json"
  }
}
